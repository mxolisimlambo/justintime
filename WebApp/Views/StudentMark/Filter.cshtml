@model  List<WebApp.Data.StudentMarks>

@{
    ViewBag.Title = "Filter";
}



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<br />
<br />

    @using (Html.BeginForm("Filter", "StudentMark", FormMethod.Get))
    {
    <p>

        Subject: @Html.DropDownList("SubjectT", "Subject")

        Class: @Html.DropDownList("GroupG", "Class")
      
        <input type="submit" value="Search" />
       
    </p>
    }
@using (Html.BeginForm("CaptureMark", "StudentMark", FormMethod.Post))
{
    <table>
        <tr>
            <th></th>
            <th>Student_Number</th>
            <th>Student_Name</th>
            <th>Class_Group</th>
            <th>Class_Name</th>
            <th>Subject_Code</th>
            <th>Mark</th>
            <th>Result</th>
        </tr>
       @for (int i = 0;i < Model.Count; i++)
        {
            <tr>
                <td> @Html.HiddenFor(model => model[i].Id)</td>
                <td>@Html.DisplayFor(model => model[i].Student_Number)</td>
                <td>@Html.DisplayFor(model => model[i].Student_Name)</td>
                <td>@Html.DisplayFor(model => model[i].GroupeName)</td>
                <td>@Html.DisplayFor(model => model[i].Subject_Code)</td>
                <td>@Html.EditorFor(model => model[i].mark)</td>
                <td>@Html.DisplayFor(model => model[i].result)</td>
            </tr>
        }
    </table>
    <p><input type="submit" value="Save" /></p>
    <p style="color:green; font-size:12px;">
        @ViewBag.Message
    </p>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}


