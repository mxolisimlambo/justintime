@model List<WebApp.Data.Attend>

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<br />
<br />
<a>
    <li> @Html.ActionLink("Attendance Reccord", "Index", "AttendReccords")</li>
</a>
<br />
<br />

@using (@Html.BeginForm("Edit", "EditAttend", FormMethod.Post))
{
    <table>
        <tr>
            <th></th>
            <th>Student No</th>
            <th>StudentName</th>
            <th>GradeGroupID</th>
            <th>Day</th>
            <th>Date</th>
            <th>Attends</th>
            <th>Absent</th>
            <th>Await</th>
            <th>Remark</th>
        </tr>
       @for(int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Html.HiddenFor(model => model[i].AttendID)</td>
                <td>@Html.EditorFor(model => model[i].StudentNo)</td>
                <td>@Html.EditorFor(model => model[i].StudentName, new { @readonly = "true" })</td>
                <td>@Html.EditorFor(model => model[i].GradeGroupID)</td>
                <td>@Html.EditorFor(model => model[i].Day)</td>
                <td>@Html.EditorFor(model => model[i].Date)</td>
                <td>@Html.EditorFor(model => model[i].Attends)</td>
                <td>@Html.EditorFor(model => model[i].Absent)</td>
                <td>@Html.EditorFor(model => model[i].Await)</td>
                <td>@Html.EditorFor(model => model[i].Remark)</td>
                @*@Html.DropDownList(model => model[i],new { @readonly = "true"  })*@
            </tr>
        }
    </table>
    <p><input type="submit" value="Save" /></p>
    <p style="color:green; font-size:24px;">
        @ViewBag.Message
    </p>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}




